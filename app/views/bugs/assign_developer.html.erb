<div class="pt-1">
  <h1 class="text-center">Assign Bug to User</h1>
  <div class="container form-bottom">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <div class="card card-body">
          <%= form_for :anything, url: assign_developer_to_bug_path do |form| %>
            <%= form.hidden_field :bug_id, :value => @bug.id %>
            <div  class="form-group required">
              <%= form.label :'Select User' %>
              <%= select_tag "anything[user_id]", options_for_select(@users.map { |s| ["#{s.name} - #{s.role}", s.id] }), class: "form-control" %>
            </div>
            <div  class="form-group">
              <%= form.label :'Deadline' %>
              <%= date_field(:anything, :deadline, class:"form-control" )  %>
            </div>
            <%= form.hidden_field :project_id, :value => @project_id %>
            <div class="form-group pt-1">
              <%= form.submit "Assign User" , class: "btn btn-primary btn-block"  %>
            </div>
          <% end  %>
        </div>
      </div>
    </div>
  </div>
</div>
