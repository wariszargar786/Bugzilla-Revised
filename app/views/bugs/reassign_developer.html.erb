<div class="pt-1">
  <% if session[:notice]  %>
    <div class="alert alert-danger" role="alert">
      <%= session[:notice] %>
    </div>
  <% end %>
  <h1 class="text-center">Re-assign Bug to User</h1>

  <div class="container form-bottom">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <div class="card card-body">
          <%= form_for :@bug_user, url: reassign_developer_post_path(params[:id]) do |form| %>
            <div class="form-group required">
              <%= form.label :'Select User' %>
              <%= select_tag "bug_user[user_id]", options_for_select(@users.map { |s| ["#{s.name} - #{s.role}", s.id] }), class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :'Deadline' %>
              <%= date_field(:bug_user, :deadline, class: "form-control" , min: 0.days.ago, max: 1.year.from_now) %>
            </div>
            <div class="form-group pt-1">
              <%= form.submit "Assign User", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
