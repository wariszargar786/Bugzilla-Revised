<div class="pt-1 pb-5">
  <h1 class="text-center">Sign Up</h1>
  <div class="container form-bottom">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <div class="card card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "shared/errors", error: resource %>
            <div class="form-group">
              <%= f.label :name, class: "form-control-label" %>
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: "form-control-label"  %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "form-control-label"  %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br/>
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control"  %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "form-control-label"  %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
            </div>
            <div class="form-group required">
              <%= f.label :role, class: "form-control-label", class: "form-control-label"  %>
              <%= select(:user, :role, options_for_select(User.user_role.collect { |key, val| [key, key] }), {}, { :class => 'form-control' }) %>
            </div>
            <div class="form-group pt-1">
              <%= f.submit "Sign up" , class: "btn btn-primary btn-block"  %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

