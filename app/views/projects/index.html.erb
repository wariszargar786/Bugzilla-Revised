<%= render @projects %>
<% if @projects.count <= 0 %>
  <h4 class="text-center"> Sorry you are not associated with any project. </h4>

  <div class="text-center">
    <% if can? :new, ProjectsController %>
      <%= link_to "Create New Project", new_project_path, class: "btn btn-outline-primary" %>
    <% end %>
  </div>
<% end %>
<%= render 'shared/pagination', pagination: @projects %>